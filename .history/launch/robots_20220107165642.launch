<launch>
    <!-- No namespace here as we will share this description. 
         Access with slash at the beginning -->        
  
    <!-- BEGIN ROBOT 1-->
    <group ns="robot1">
      <param name="tf_prefix" value="robot1_tf" />
        <arg name="x_pos" value="1" />
        <arg name="y_pos" value="-1"/>
        <arg name="z_pos" value="0"/>
        <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
        <arg name="robot_name"  value="Robot1" />
        <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />      
        <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg robot_name) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />        
    </group>
  
    <!-- BEGIN ROBOT 2-->
    <group ns="robot2">
      <param name="tf_prefix" value="robot2_tf" />
        <arg name="x_pos" value="2" />
        <arg name="y_pos" value="-2"/>
        <arg name="z_pos" value="0"/>
        <arg name="model" default="burger" doc="model type [burger, waffle, waffle_pi]"/>
        <arg name="robot_name"  value="Robot2" />
        <param name="robot_description" command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />
        <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg robot_name) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />     
    </group>
</launch>